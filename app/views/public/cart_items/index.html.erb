<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <p><%= cart_item.item.name %></p>
          </td>
          <td>
            <p><%= cart_item.item.tax %></p>
          </td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
              <% if cart_item.quantity < 10 %>
                <%= f.select :quantity, *[1..10], include_black: cart_item.quantity %>
              <% else %>
                <%= f.text_field :quantity, value: cart_item.quantity %>
              <% end %>
              <%= f.hidden_field :item_id, :value => cart_item.item.id %>
              <%= f.submit '変更' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal %></td>
          <td><%= link_to "削除する",  public_cart_item_path(cart_item), method: :delete %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<table>
  <tr>
    <td><%= link_to "買い物を続ける", public_items_path %></td>
    <% @cart_items.each do |cart_item| %>
      <% @total = @total + cart_item.subtotal %>
    <% end %>
    <td>合計金額</td>
    <td><%= @total.to_s(:delimited) %></td>
  </tr>
</table>