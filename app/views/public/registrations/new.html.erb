<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "中臣" %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :last_name, autocomplete: "鎌足" %>
  </div>

  <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :first_name_kana, autocomplete: "ナカトミノ" %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :last_name_kana, autocomplete: "カマタリ" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :zip_code, autocomplete: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :adress, autocomplete: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_namber, autocomplete: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


<%= render "public/shared/links" %>
